<script type="text/javascript">
jQuery.fn.alternate = function() {
    var that = jQuery(this);
    var elems = that.children();
    that.empty();
    that.append(elems[elems.length - 1]);
    for(var j = 0; j < elems.length - 1; j++) {
        that.append(elems[j]);
    }
    jQuery("#sightings div:gt(7)").hide();
    jQuery("#sightings div:lt(8)").fadeIn("fast");
};

this.random = function() {
    jQuery("#sightings").alternate();
};

jQuery(document).ready(function() {
    random();
    setInterval(random, 3000);
});
</script>

